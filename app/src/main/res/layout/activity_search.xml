<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.SearchActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_20sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_50sdp"
                android:gravity="center"
                android:background="@drawable/stroke_bg"
                android:layout_marginHorizontal="@dimen/_16sdp">

                <ImageView
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"
                    app:srcCompat="@drawable/search_icon"
                    android:layout_marginVertical="@dimen/_14sdp"
                    android:layout_marginHorizontal="@dimen/_16sdp"   />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:text="Search"
                    android:fontFamily="@font/plusjakartasansregular"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/light_grey"
                    android:background="@android:color/transparent"
                    />
            </LinearLayout>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:fontFamily="@font/bebasneueregular"
                android:text="Recent searches"
                android:textColor="@color/black"
                android:textSize="@dimen/_20ssp"
                android:layout_marginTop="@dimen/_22sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:textFontWeight="400"/>

            <GridLayout
                android:id="@+id/sugGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="4"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:useDefaultMargins="true"
                android:gravity="center"   >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/searchimage1"                             />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:text="NIKE"
                        android:fontFamily="@font/plusjakartasansbold"
                        android:textFontWeight="700"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/searchimage2"                             />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:text="PUMA"
                        android:fontFamily="@font/plusjakartasansbold"
                        android:textFontWeight="700"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/searchimage3"                             />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:text="ADIDAS"
                        android:fontFamily="@font/plusjakartasansbold"
                        android:textFontWeight="700"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/searchimage4"                             />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:text="SKECHERS"
                        android:fontFamily="@font/plusjakartasansbold"
                        android:textFontWeight="700"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold"/>

                </LinearLayout>

            </GridLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:fontFamily="@font/bebasneueregular"
                android:text="Trending SEARCHES"
                android:textColor="@color/black"
                android:textSize="@dimen/_20ssp"
                android:layout_marginTop="@dimen/_22sdp"
                android:textFontWeight="400"
                android:layout_marginHorizontal="@dimen/_16sdp" />

            <GridLayout
                android:id="@+id/colorseaGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:rowCount="2"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:useDefaultMargins="true"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/companyIcon"    >


                <LinearLayout
                    android:layout_width="@dimen/_136sdp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="@color/aqua_spring">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/product1"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/circleImageView"                    />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SKECHERS"
                        android:fontFamily="@font/plusjakartasansmedium"
                        android:textFontWeight="500"
                        android:textSize="@dimen/_11ssp"
                        android:layout_marginHorizontal="@dimen/_8sdp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/_136sdp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="@color/search_bg">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/product2"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/circleImageView"                    />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Air Max 90"
                        android:fontFamily="@font/plusjakartasansmedium"
                        android:textFontWeight="500"
                        android:textSize="@dimen/_11ssp"
                        android:textColor="@color/search_txt"
                        android:layout_marginHorizontal="@dimen/_8sdp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/_136sdp"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="@color/search_bg">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/product3"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/circleImageView"                    />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nike Air Max 270"
                        android:fontFamily="@font/plusjakartasansmedium"
                        android:textFontWeight="500"
                        android:textSize="@dimen/_11ssp"
                        android:textColor="@color/search_txt"
                        android:layout_marginHorizontal="@dimen/_8sdp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/_136sdp"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="@color/search_bg">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/product6"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/circleImageView"                    />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Puma"
                        android:fontFamily="@font/plusjakartasansmedium"
                        android:textFontWeight="500"
                        android:textSize="@dimen/_11ssp"
                        android:textColor="@color/search_txt"
                        android:layout_marginHorizontal="@dimen/_8sdp"/>

                </LinearLayout>

            </GridLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:fontFamily="@font/bebasneueregular"
                android:text="popular products"
                android:textColor="@color/black"
                android:textSize="@dimen/_20ssp"
                android:layout_marginTop="@dimen/_22sdp"
                android:textFontWeight="400"
                android:layout_marginHorizontal="@dimen/_16sdp" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/discSearchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_10sdp" />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/white"
            app:itemIconTint="@color/icon_color"
            app:itemRippleColor="@android:color/transparent"
            app:itemTextColor="@color/icon_color"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_menu" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>